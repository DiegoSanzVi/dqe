% -*- erlang -*-
{cover_enabled, true}.
{erl_opts, [debug_info, warnings_as_errors]}.
{edoc_opts, [{dir, "doc"}]}.
{eunit_opts, [{report,{eunit_surefire,[{dir,"."}]}}]}.
{deps,
 [
  {poolboy, ".*", {git, "https://github.com/devinus/poolboy.git", {tag, "1.5.1"}}},
  {qdate, ".*", {git, "https://github.com/choptastic/qdate.git", {tag, "0.3.0"}}},
  {dproto, "0.1.*", {git, "git://github.com/dalmatinerdb/dproto.git", {tag, "0.1.8"}}},
  {ddb_client, "0.1.*", {git, "git://github.com/dalmatinerdb/ddb_client.git", {tag, "0.1.9"}}},
  {mmath, "0.1.*", {git, "https://github.com/DalmatinerDB/mmath.git", {tag, "0.1.6"}}},
  {dflow, "0.1.*", {git, "https://github.com/DalmatinerDB/dflow.git", {tag, "0.1.3"}}}
 ]}.

{profiles,
 [{eqc, [{plugins, [rebar3_eqc]}]},
  {pkg,
   [{deps,
     [
      {poolboy, "1.5.1"},
      {qdate, "0.3.0"},
      {dproto, "0.1.8"},
      {ddb_client, "0.1.9"},
      {mmath, "0.1.6"},
      {dflow, "0.1.3"}
     ]}]}]}.
